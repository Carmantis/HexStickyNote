{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HexStickyNote",
  "version": "0.1.0",
  "identifier": "com.hexstickynote.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "HexStickyNote",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "shadow": false,
        "visible": false
      },
      {
        "label": "orb",
        "title": "HexStickyNote Orb",
        "width": 76,
        "height": 76,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": false,
        "shadow": false,
        "visible": true,
        "x": -100,
        "y": -100
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/hexstickynote-mcp.mjs"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English", "Finnish"],
        "displayLanguageSelector": true
      }
    }
  }
}